<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<mapper namespace="boardMapper">
    <resultMap id="board" type="com.green.MediClick.board.vo.BoardVO">
        <id column="BOARD_NUM" property="boardNum"/>
        <result column="TITLE" property="title"/>
        <result column="WRITER" property="writer"/>
        <result column="CONTENT" property="content"/>
        <result column="CREATE_DATE" property="createDate"/>
        <result column="MEM_NUM" property="memNum"/>
        <association property="memberVO" resultMap="member.member"/>
    </resultMap>
    <!--게시글 등록-->
    <insert id="insertBoard">
        INSERT INTO USER_BOARD (
            TITLE
            , WRITER
            , CONTENT
            , MEM_NUM
        ) VALUES (
            #{title}
            , #{writer}
            , #{content}
            , #{memNum}
        )
    </insert>
    <!--게시글 목록 조회-->
    <select id="getBoardList" resultMap="board">
        SELECT BOARD_NUM
            , TITLE
            , WRITER
            , CREATE_DATE
        FROM USER_BOARD
        ORDER BY CREATE_DATE DESC
    </select>
    <!--게시글 상세정보 조회-->
    <select id="selectBoard" resultMap="board">
        SELECT BOARD_NUM
            , TITLE
            , WRITER
            , CONTENT
            , CREATE_DATE
        FROM USER_BOARD
        WHERE BOARD_NUM = #{boardNum};
    </select>
    <!--게시글 삭제-->
    <delete id="deletePost">
        DELETE FROM USER_BOARD
        WHERE BOARD_NUM = #{boardNum}
    </delete>
    <!--게시글 수정-->
    <update id="updateBoard">
        UPDATE USER_BOARD
        SET
        TITLE = #{title},
        CONTENT = #{content}
        WHERE BOARD_NUM = #{boardNum}
    </update>

</mapper>































