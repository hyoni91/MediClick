<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<mapper namespace="scheduleMapper">
	<resultMap id="schedule" type="com.green.MediClick.schedule.vo.ScheduleVO">
        <id column="SCH_NUM" property="schNum"/>
        <result column="DOC_NUM" property="docNum"/>
        <result column="MEM_NUM" property="memNum"/>
        <result column="REH_DATE" property="rehDate"/>
        <result column="SCH_DATE" property="schDate"/>
        <result column="DETAIL" property="detail"/>
        <result column="SCH_STATUS" property="schStatus"/>
        <association property="doctorVO" resultMap="doctor"/>
        <collection property="memberVO" resultMap="member"/>
    </resultMap>

    <resultMap id="member" type="com.green.MediClick.member.vo.MemberVO">
        <id column="MEM_NUM" property="memNum" />
        <result column="MEM_NAME" property="memName" />
        <result column="MEM_TEL" property="memTel" />
        <result column="MEM_RRN" property="memRrn" />
        <result column="MEM_ROLE" property="memRole" />
    </resultMap>

    <resultMap id="doctor" type="com.green.MediClick.medicaldoctor.vo.DoctorVO">
        <id column="DOC_NUM" property="docNum" />
        <result column="DOC_NAME" property="docName" />
        <collection property="medicalDept" resultMap="dept"/>
    </resultMap>

    <resultMap id="dept" type="com.green.MediClick.medicaldoctor.vo.MedicalDept">
        <id column="DEPT_NUM" property="deptNum" />
        <result column="DEPT_NAME" property="deptName" />
    </resultMap>



        <!--관리자 : 담당의별 환자 차트-->
     <select id="docMemChart" resultMap="schedule">
        SELECT SCH_NUM
                ,SCH_DATE
                ,DOC_NAME
                ,DEPT_NAME
                ,MEM_NAME
                ,DETAIL
                ,SCH_STATUS
        FROM MEDICAL_SCHEDULE S,MEDICAL_DOCTOR D,MEDICAL_MEMBER M,MEDICAL_DEPT P
        WHERE S.DOC_NUM=#{docNum}
        AND S.DOC_NUM=D.DOC_NUM
        AND S.MEM_NUM=M.MEM_NUM
        AND D.DEPT_NUM=P.DEPT_NUM
        ORDER BY SCH_NUM DESC
     </select>

    <!--예약취소 : SCH_STATUS='N'로 변경-->
    <update id="updateSchStatus">
        UPDATE MEDICAL_SCHEDULE
        SET SCH_STATUS='N'
        WHERE SCH_NUM=#{schNum}
    </update>

</mapper>































